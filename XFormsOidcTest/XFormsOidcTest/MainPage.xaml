<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFormsOidcTest.MainPage">

  <ScrollView VerticalOptions="FillAndExpand">
    <StackLayout>
      <Button Text="Start" Clicked="Start_Clicked" />
      <Button Text="Call" Clicked="Call_Clicked" />

      <Label Text="IdentityServerUrl" />
      <Label x:Name="IdentityServerUrlLabel" />

      <Label Text="AccessToken" />
      <Editor x:Name="AccessTokenText" HeightRequest="100" />

      <Label Text="results" />
      <Editor x:Name="resultsText" Text="results will be here" VerticalOptions="FillAndExpand" HeightRequest="1000" />

    </StackLayout>
  </ScrollView>

</ContentPage>